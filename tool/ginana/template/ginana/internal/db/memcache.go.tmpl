package db

import (
	"{{.ModPrefix}}{{.Name}}/internal/config"
	"gitee.com/griffin702/ginana/library/cache/memcache"
	"gitee.com/griffin702/ginana/library/conf/paladin"
)

func NewMC(cfg *config.Config) (mc memcache.Memcache, err error) {
	key := "memcache.toml"
	if err = paladin.Get(key).UnmarshalTOML(cfg); err != nil {
		return
	}
	mc = memcache.New(cfg.Memcache)
	return
}
